# In an array where every element appears twice except one, find that single number.
# XOR helps because:
#   - a ^ a = 0  (same numbers cancel out)
#   - a ^ 0 = a
#   - XOR is commutative and associative, so order doesn’t matter
# Hence, XORing all elements leaves only the unique number.

# ✅ Example:
# nums = [2, 3, 2]
# 2 ^ 3 ^ 2 = (2 ^ 2) ^ 3 = 0 ^ 3 = 3 → unique element

# ✅ C++ Code
#include <bits/stdc++.h>
using namespace std;

class Solution {
public:
    int singleNumber(vector<int>& nums) {
        int ans = 0;                     // start with 0
        for (int x : nums)               // go through each number
            ans ^= x;                    // XOR accumulates, duplicates cancel out
        return ans;                      // remaining one is unique
    }
};
